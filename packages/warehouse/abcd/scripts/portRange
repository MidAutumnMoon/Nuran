#!/bin/sh

# shadowsocks

iptables -t nat -A PREROUTING -p tcp --dport 28912:29912 -j REDIRECT --to-port 39082
iptables -t nat -A PREROUTING -p udp --dport 28912:29912 -j REDIRECT --to-port 39082

ip6tables -t nat -A PREROUTING -p tcp --dport 28912:29912 -j REDIRECT --to-port 39082
ip6tables -t nat -A PREROUTING -p udp --dport 28912:29912 -j REDIRECT --to-port 39082


# hysteria

iptables -t nat -A PREROUTING -p udp --dport 30190:40000 -j REDIRECT --to-port 40875

ip6tables -t nat -A PREROUTING -p udp --dport 30190:40000 -j REDIRECT --to-port 40875
